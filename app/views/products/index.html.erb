<div class="container">
  <div class="hero-unit">
      <h1 class="text-center">Our flowers</h1>
  </div>
    <table class="table table-striped">
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= image_tag(product.image_url, class: 'img-rounded img-polaroid') %>
        </td>

        <td>
          <dl>
            <dt class="lead"><%= product.title %></dt>
            <dd><em><%= product.latin_name %></em></dd>
            <dd> 
              <%= truncate(strip_tags(product.description),
                   length: 80) %></dd>
          </dl>
        </td>

        <td>
          <%= link_to 'Show', product, class: "btn btn-small" %><br/>
          <%= link_to 'Edit', edit_product_path(product), class: "btn btn-small" %><br/>
          <%= link_to 'Destroy', product, method: :delete,
                      data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %>
        </td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'New product', new_product_path, class: "btn btn-primary"%>
    </div>
